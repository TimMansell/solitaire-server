{
  "name": "solitaire-server",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --experimental-specifier-resolution=node ./src/main.js",
    "test:unit": "jest",
    "lint": "eslint {src,tests}/**/*.js --fix"
  },
  "dependencies": {
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "lodash.shuffle": "4.2.0",
    "mongodb": "4.1.2",
    "numeral": "2.0.6",
    "semver": "7.3.5",
    "socket.io": "4.2.0",
    "unique-names-generator": "4.6.0"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/preset-env": "7.15.6",
    "babel-jest": "27.2.2",
    "eslint": "7.28.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-security": "1.4.0",
    "jest": "27.2.2",
    "lint-staged": "10.5.4",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "yorkie": "2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "imports": {
    "#db/*": "./src/db/*"
  }
}
