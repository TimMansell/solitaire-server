{
  "name": "solitaire-server",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --experimental-specifier-resolution=node ./src/main.js",
    "stats": "nodemon --experimental-specifier-resolution=node ./src/tasks/stats.js",
    "test:unit": "jest",
    "test:e2e": "run-p -r dev cypress:run",
    "test:e2e:gui": "run-p -r dev cypress:open",
    "cypress:run": "cypress run --headless --browser chrome",
    "cypress:open": "cypress open",
    "lint": "eslint {src,tests}/**/*.js --fix"
  },
  "dependencies": {
    "date-fns": "2.27.0",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "lodash.shuffle": "4.2.0",
    "mongodb": "4.1.2",
    "numeral": "2.0.6",
    "semver": "7.3.5",
    "socket.io": "4.2.0",
    "unique-names-generator": "4.6.0"
  },
  "devDependencies": {
    "@babel/preset-env": "7.15.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "27.2.2",
    "cross-env": "7.0.3",
    "cypress": "7.5.0",
    "cypress-commands": "1.1.0",
    "cypress-wait-until": "1.7.1",
    "eslint": "7.28.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-cypress": "2.11.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-security": "1.4.0",
    "jest": "27.2.2",
    "jest-matchmedia-mock": "1.1.0",
    "jest-serializer-vue": "2.0.2",
    "jest-transform-stub": "2.0.0",
    "lint-staged": "10.5.4",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "rollup": "2.58.0",
    "rollup-plugin-terser": "7.0.2",
    "timezone-mock": "1.2.1",
    "yorkie": "2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "imports": {
    "#@/*": "./src/*"
  }
}
